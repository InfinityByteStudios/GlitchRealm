# Netlify Headers Configuration
# Additional cache control for performance optimization

# Static assets - long cache with immutable
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Game assets - long cache with immutable
/Games/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# JavaScript files - medium cache
/*.js
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

# CSS files - medium cache
/*.css
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

# Service worker - no cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  X-Content-Type-Options: nosniff

# HTML files - no cache for dynamic content
/*.html
  Cache-Control: public, max-age=0, must-revalidate
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

# Images - long cache
/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

# Fonts - long cache
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Manifest and other PWA files
/manifest.json
  Cache-Control: public, max-age=86400

/site.webmanifest
  Cache-Control: public, max-age=86400